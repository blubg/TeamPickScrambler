
<form method = "post" action = "/teams">
  <label for="names">Enter Names Here</label>
  <input type = "textarea" name = "list">
  <p>
    <label for="lists">How many teams would you like to divide all of these bodies into?</label>
    <input type = "textarea" name = "num_teams">
  </p>

  <input type = "submit">
  <br />
  <br />
  <br />
</form>

<%if @teams  %>

  <%if @teams.is_a? Hash%>
    <h3>Teams are</h3>
    <%@teams.each do |team, members| %>
    <strong><%="Team #{team}: " %></strong>
    <%    members.each do |member|    %>
            <%=member%>
        <%end  %>
        <br> 
        <% end  %>
  <%else %>
  <%= "#{@teams}" %>
  <%end%>
        
<%end%>
